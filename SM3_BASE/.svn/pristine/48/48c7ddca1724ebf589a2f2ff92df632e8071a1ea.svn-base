@charset "utf-8";

html, body, .align-middle { height: 100%; }
.align-middle {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
}
.jumbotron { padding-top: 25px; padding-bottom: 25px; }
.jumbotron h2 { margin-bottom: 22px; }
.jumbotron p { font-size: 14px; margin-bottom: 10px; }

.well { margin-top: 20px; }
div.btn-blank { margin-top: 30px; }

#timerText { font-weight: bold; }

/* popUp */
.container-popup { width: auto !important; padding: 0; margin: 0; }
.jumbotron-popup { background: none; padding: 0 !important; margin: 0 !important; }
.jumbotron-popup h2 { font-size: 20px; font-weight: bold; }
.jumbotron-popup p { font-size: 14px; }