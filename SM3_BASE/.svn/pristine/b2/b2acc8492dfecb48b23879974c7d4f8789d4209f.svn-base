<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   
    <modelVersion>4.0.0</modelVersion> <!-- pom.xml의 모델 버젼 -->

    <groupId>com.srpost</groupId> <!-- 조직이나 그룹명 -->
    <artifactId>flamingo</artifactId> <!-- 패키지명 -->
    <version>3.0.0-SNAPSHOT</version> <!-- 어플리케이션 버젼 -->
    <packaging>war</packaging> <!-- 패키지 형식 -->

    <name>flamingo</name> <!-- 프로젝트명 -->
    <url>http://www.srpost.co.kr</url> <!-- 사이트 주소 -->
    <description></description> <!-- 기타 설명 -->
    
    <properties>
        <egovframework.rte.version>3.1.0</egovframework.rte.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.test.skip>true</maven.test.skip>
    </properties>

    <build>
        <finalName>${project.artifactId}-${project.version}</finalName>
        
        <directory>target</directory>
        
        <sourceDirectory>main/src</sourceDirectory>
        <resources>
            <resource>
                <directory>main/resources</directory>
            </resource>
        </resources>
        <outputDirectory>webapp/WEB-INF/classes</outputDirectory>
        
        <testSourceDirectory>main/test</testSourceDirectory>
        <testOutputDirectory>target/test/classes</testOutputDirectory>
        <!-- <testResources>
            <testResource>
                <directory>src/resources</directory>
            </testResource>
        </testResources>
        
        <scriptSourceDirectory>src/main/scripts</scriptSourceDirectory> -->
        
        <pluginManagement>
        <plugins>
            <!-- Eclipse 에서 Dynamic Web Project 구동을 위한 의존성 추가 -->
            <plugin>
                <artifactId>maven-eclipse-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <wtpversion>1.5</wtpversion>
                </configuration>
            </plugin>
            <!-- 모든 테스트  SKIP -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <skiptests>true</skiptests>
                </configuration>
            </plugin>
            <!-- 웹루트 경로 변경 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <warSourceDirectory>webapp</warSourceDirectory>
                </configuration>
            </plugin>
            <!-- 의존 라이브러리 웹루트로 이동 for Tomcat (기존것은 삭제함) -->
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>webapp/WEB-INF/lib</directory>
                        </fileset>
                        <fileset>
                            <directory>webapp/WEB-INF/classes</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.9</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <!-- <phase>validate</phase> -->
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>webapp/WEB-INF/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <excludeScope>provided</excludeScope>
                            <excludeArtifactIds>log4j,ibatis-sqlmap,commons-vfs,commons-logging,spring-test,junit</excludeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- 컴파일러 설정 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            
            <!-- 리소스 인코딩 설정 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
        </pluginManagement>
    </build>

    <!-- 추가 저장소 설정 -->
    
    <repositories>
        <repository>
            <id>mvn2</id>
            <url>http://repo1.maven.org/maven2/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
